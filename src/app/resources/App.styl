@import '../../dijit/themes/tundra/tundra.css'
@import '../../esri/css/esri.css'
@import '../../agrc/resources/map/BaseMap.css'
@import '../../agrc/resources/map/BaseMapSelector.css'
@import '../../bootstrap-css-only/css/bootstrap.css'
@import '../../dgrid/css/dgrid.css'
@import '../../ijit/resources/authentication/LoginRegister.css'
@require 'vars.styl'

body,
html,
.app
    width 100%
    height 100%
    margin 0
    padding 0
    overflow hidden
    font-family Arial, sans-serif
    color #444

    /* NAV BAR */
    .navbar
        min-width 500px
        background-color rgba(231, 231, 231, .9)
        background-image none
        border-color $border-color

    .logo
        padding 5px 0 5px 10px

    .navbar-brand
        font-size 28px
        padding-top 18px

    .version
        font-size 12px
        text-decoration none
        letter-spacing 0
        display inline
        padding 0

    .version:hover
        text-decoration underline !important

    .logoutDiv a
        margin 0

    /* CENTER (MAP) */
    .map-div
        position fixed
        top 0
        left 0
        right 0
        bottom 0

        .esriSimpleSliderTL
            top 75px
            background-color rgba(231, 231, 231, .9)

        .esriSimpleSliderTL,
        .esriSimpleSliderVertical .esriSimpleSliderIncrementButton
            border-color $border-color

        .esriSimpleSliderVertical .esriSimpleSliderIncrementButton
            border-bottom-color $border-color

        .selectorMain
            top 72px
            right 10px

        // fix tooltip collision with bootstrap
        .tooltip
            opacity 1

    /* GRID */
    [data-dojo-attach-point='gridContainer']
        border-top 1px solid $border-color
        position fixed
        bottom 0
        left 0
        right 0
        height 0

/* GENERAL STUFF */
/* remove orange outline in chrome */
*:focus
    outline none !important
